css:
    .main-header { color: red; }

page \
    path="/" \
    title="monomadic"

    row centered
        column max-width="960px" class="main-header"
            image ./monomadic.svg
            | monomadic

            map markdown(./posts) as post
                link href=post.href
                    | post.title
                
                page post.path
                    h1
                        | ${ post.title }
                        | ${ post.body }
