%html
  %head
    %link { rel: "stylesheet", href: ./style.css }
  %body
    %h1 My Blog
    for post in ./posts/*.md
      %h2 Page
      let meta = post.frontmatter()
      %ul
        %li
          %a { href: meta.route }
            meta.title
      @route path=meta.route
        %html
          %head
            %link { rel: "stylesheet", href: ./style.css }
          %body
            %a { href: "/" } My Blog
            %h1
              meta.title
            post.markdown()
